<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/circle_item_card"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/circle_item_re"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_60"
                    android:src="@mipmap/ic_launcher"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/dp_20"
                    android:id="@+id/circle_item_head"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小白妞"
                    android:layout_toRightOf="@id/circle_item_head"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:id="@+id/circle_item_name"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2018-11-13  13:30"
                    android:layout_gravity="center_vertical"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/circle_item_date"
                    android:paddingRight="@dimen/dp_15"/>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4444"
                android:paddingLeft="@dimen/dp_20"
                android:id="@+id/circle_item_count"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_170"
                android:layout_gravity="center_horizontal"
                android:id="@+id/circle_item_pic"
                android:layout_marginTop="@dimen/dp_8"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="123"
                    android:layout_alignParentRight="true"
                    android:id="@+id/circle_item_num"
                    android:paddingRight="@dimen/dp_24"
                    android:paddingBottom="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"/>

                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:button="@null"
                    android:layout_toLeftOf="@id/circle_item_num"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:id="@+id/circle_item_fabulous"/>
            </RelativeLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
