<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_40">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/go_to_talk_img"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="迪奥（Dior）口红"
            android:layout_toRightOf="@id/go_to_talk_img"
            android:id="@+id/go_to_talk_name"
            android:layout_marginLeft="@dimen/dp_15"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥520.00"
            android:textColor="@color/red"
            android:id="@+id/go_to_talk_price"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_toRightOf="@id/go_to_talk_img"
            android:layout_below="@id/go_to_talk_name"
            android:layout_marginTop="@dimen/dp_25"/>
    </RelativeLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_150"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/talk_style"
        android:hint="请在此写下你对商品的评价"
        android:id="@+id/go_to_talk_edit"
        android:paddingLeft="@dimen/dp_40"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/common_btn_camera_blue_n_hdpi"
        android:background="@drawable/talk_style"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:id="@+id/go_to_talk_cream"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="同步到圈子"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        android:id="@+id/go_to_talk_check"/>
    </LinearLayout>

    <Button
        android:layout_width="@dimen/dp_300"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="发表"
        android:background="@drawable/talk_pager"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_100"
        android:id="@+id/go_to_talk_send"/>
</RelativeLayout>
