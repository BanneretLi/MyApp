<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/myhome_shopping_recy">

    </com.jcodecraeer.xrecyclerview.XRecyclerView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/dp_50">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全选"
                android:layout_centerVertical="true"
                android:id="@+id/myhome_shopping_btn"
                android:layout_marginLeft="@dimen/dp_15"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥合计:0.00"
                android:textColor="#f00"
                android:id="@+id/myhome_shopping_price"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/myhome_shopping_btn"
                android:layout_marginLeft="@dimen/dp_20"/>

            <Button
                android:layout_width="@dimen/dp_118"
                android:layout_height="@dimen/dp_50"
                android:layout_alignParentRight="true"
                android:text="去结算"
                android:id="@+id/myhome_shopping_settlement"
                android:background="@color/red"
                android:textColor="@color/loginPager"/>
        </RelativeLayout>


    </android.support.v7.widget.CardView>



</RelativeLayout>
