<?xml version="1.0" encoding="utf-8"?>
<com.mcxtzhang.swipemenulib.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_97"
        android:id="@+id/shopping_item_card">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_24"
            >

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:id="@+id/shopping_item_check"/>

            <ImageView
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_81"

                android:src="@mipmap/ic_launcher"
                android:id="@+id/shopping_item_img"
                android:layout_marginLeft="@dimen/dp_36"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="迪奥（Dior）口红dior女士"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_toRightOf="@+id/shopping_item_img"
                android:layout_marginLeft="@dimen/dp_10"
                android:id="@+id/shopping_item_name"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥0.00"
                android:textColor="@color/red"
                android:ellipsize="end"
                android:layout_toRightOf="@+id/shopping_item_img"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_60"
                android:id="@+id/shopping_item_price"/>


                <Button
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:text="—"
                    android:layout_toLeftOf="@+id/shopping_item_num"
                    android:layout_marginTop="@dimen/dp_50"
                    android:id="@+id/shopping_item_jian"/>

                <Button
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:text="1"
                    android:id="@+id/shopping_item_num"
                    android:layout_toLeftOf="@id/shopping_item_add"
                    android:layout_marginTop="@dimen/dp_50"/>

                <Button
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:text="+"
                    android:id="@+id/shopping_item_add"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_50"
                    android:layout_marginRight="@dimen/dp_10"/>


        </RelativeLayout>



    </android.support.v7.widget.CardView>

    <Button
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_97"
        android:text="删除"
        android:textColor="@color/loginPager"
        android:background="@color/red"/>

</com.mcxtzhang.swipemenulib.SwipeMenuLayout>
