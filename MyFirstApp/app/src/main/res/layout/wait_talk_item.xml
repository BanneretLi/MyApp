<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_pager"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单号   WD20180930884324"
            android:layout_marginLeft="@dimen/dp_15"
            android:id="@+id/wait_talk_num"
            android:layout_marginBottom="@dimen/dp_15"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018-09-30"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_alignParentRight="true"
            android:id="@+id/wait_talk_date"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


            <ImageView
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_80"
                android:src="@mipmap/ic_launcher"
                android:id="@+id/wait_talk_img"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_0_5"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123456789912345+67891"

                android:id="@+id/wait_talk_name"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_toRightOf="@+id/wait_talk_img"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥0.00"
                android:textColor="#f00"
                android:layout_toRightOf="@id/wait_talk_img"
                android:layout_marginTop="@dimen/dp_45"
                android:layout_below="@id/wait_talk_name"
                android:id="@+id/wait_talk_price"
                android:layout_marginLeft="@dimen/dp_20"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_45">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="去评价"
                    android:id="@+id/wait_talk_queren"/>


            </LinearLayout>
    </RelativeLayout>
</LinearLayout>
